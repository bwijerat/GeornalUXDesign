<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="5"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/image123"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo_goernal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="95"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FF7D49" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvWilliamWhiteCircle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/white_circle"
                android:gravity="center"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/tvWilliamWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="William White"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <!-- OOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOO -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bFollowing"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:text="25"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tvFollowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Following"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bFollowers"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:text="94"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tvFollowers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Followers"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
        </LinearLayout>

        <!-- OOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOO -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="63dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bEntries"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:text="11"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tvEntries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entries"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="63dp"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/bMaps"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@drawable/white_circle_map"
                    android:gravity="center"
                    android:textSize="35sp" />

                <TextView
                    android:id="@+id/tvMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Maps"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
        </LinearLayout>
        
        <!-- OOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOO -->
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#C67246"
                android:gravity="center"
                android:text="Tell me about it!"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
            
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>